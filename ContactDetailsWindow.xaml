<Window x:Class="ContactManagerApp1.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManagerApp1"
        mc:Ignorable="d"
        Title="Contact Details Window" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" FontWeight="Bold"/>
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"/>
            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"/>
            <TextBlock Text="Phone Number:" FontWeight="Bold"/>
            <TextBox x:Name="phoneTextBox" Margin="0,0,0,5"/>
            <Button Content="Update Contact"
                    x:Name="updateButton"
                    Click="UpdateButton_Click"
                    Margin="0,0,0,5" 
                    FontWeight="Bold"/>
            <Button x:Name="deleteButton"
                    Click="DeleteButton_Click"
                    Content="Delete Contact"
                    Background="Red"
                    Foreground="White"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
